{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "types": ["jest"]
  },
  "include": ["src/**/*"],
}
