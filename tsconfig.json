{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "sourceMap": true,
    "allowJs": true,
  },
  "include": ["src/**/*", "./@types/**/*"]
}
